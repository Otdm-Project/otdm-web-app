---
const docs = await Astro.glob('@/pages/docs/*.md')

//markdownファイル名を取得
const getFileName = (path: string) => {
  const parts = path.split('/');
  const fileName = parts[parts.length - 1];
  return fileName.replace('.md', '');
};

//markdownファイルの順番を指定
const order = ['index', 'setup', 'quick-start', 'command', 'error'];

//markdownファイルの順番に並び替え
docs.sort((a, b) => {
  const nameA = getFileName(a.file);
  const nameB = getFileName(b.file);
  return order.indexOf(nameA) - order.indexOf(nameB);
});
---

<div class="lg:(flex flex-col) hidden min-w-64 border-(r-2 docs-secondary)">
  <div class="sticky top-20 flex flex-col gap-2 p-8">
    <input class="h-8 px-2 bg-docs-primary border-(2 docs-secondary) outline-cyan-600 focus:border-none caret-nav" />
    {docs.map((doc) => (
      <a class="p-2 rounded-lg outline-cyan-600 hover:bg-slate-950/5" href={doc.url}>{doc.frontmatter.header}</a>
    ))}
  </div>
</div>