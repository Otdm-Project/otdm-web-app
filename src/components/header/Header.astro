---
import { Image } from 'astro:assets';
import otdmIcon from '../../assets/otdm-icon.svg';
import OtdmButton from "./OtdmButton.astro";
import Search from "../overlay/search/Search"
import Menu from "../overlay/menu/Menu";
---
<header class="z-10 sticky top-0 w-full bg-otdm-primary text-otdm-text sm:h-20">
  <div class="flex justify-between items-center gap-3 h-full p-2 sm:(px-6 py-4)">

    <a class="flex gap-2 items-center" href="/">
      <Image src={otdmIcon} alt="アイコン" class="size-7 sm:(size-8)" />
      <span class="text-xl sm:text-2xl text-nowrap">おてだま</span>
    </a>
    <nav class="flex items-center gap-3 text-4xl">
      <Search client:idle />
      <OtdmButton id = "docs" />
      <OtdmButton id = "download" />
      <OtdmButton id = "github" />
      <Menu client:idle />
    </nav>
  </div>
</header>