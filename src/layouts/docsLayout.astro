---
import Layout from "./layout.astro";

interface Props {
  frontmatter: {
    title: string;
    header: string;
    author: string;
    authorLink: string;
  };
}

const {frontmatter} = Astro.props;
---

<Layout title={frontmatter.title}>
  <main class="flex-1 bg-c-base">
    <div class="flex gap-4 justify-center p-12 font-main">
      <div class="lg:flex hidden box-main min-w-64">
      </div>
      <div class="flex flex-col gap-2 box-main max-w-4xl p-8">
        <div class="flex justify-between items-end pb-2 border-b">
          <h1 class="text-4xl">{frontmatter.header}</h1>
          <h2>著者:<a class="font-main-link" href={frontmatter.authorLink}>{frontmatter.author}</a></h2>
        </div>
        <div class="markdown">
          <slot />
        </div>
      </div>
    </div>
  </main>
</Layout>