---
import PageBox from '@/components/main/pages/PageBox.astro';
import Layout from './layout.astro';

interface Props {
  frontmatter: {
    title: string;
    header: string;
    updated: string;
  };
}

const {frontmatter} = Astro.props;
---
<Layout title={frontmatter.title}>
  <div class="flex gap-8 justify-center min-h-screen my-8 p-4 sm:(my-16)">
    <PageBox header={frontmatter.header} updated={frontmatter.updated}>
      <slot />
    </PageBox>
  </div>
</Layout>