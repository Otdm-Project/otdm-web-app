---
import { Image } from 'astro:assets';
import otdmIcon from '@/assets/icon/otdm-icon.svg';
import Layout from '@/layouts/layout.astro';
---

<Layout title="ダウンロード | おてだま">
    <div class="flex flex-col items-center w-full mp-otdm">
      <Image
      src={otdmIcon}
      alt="アイコン"
      class="size-64 min-w-48 min-h-48 m-8"
      />
      <h1 class="text-4xl sm:text-5xl font-500 my-8">ダウンロード</h1>
      <div class="max-w-2xl w-full my-8">
        <div class="flex justify-between gap-4">
          <a
            href="https://github.com/Otdm-Project/otdm-win-app/releases"
            target="_blank"
            rel="noopener"
            class="dl-page-btn"
            >
            <div class="i-tabler:brand-windows size-12 self-center"></div>
            <p>windows版<br/>CUIアプリ<span class="hidden sm:inline">ケーション</span>を<br/>ダウンロード</p>
          </a>
          <a
            href="https://github.com/Otdm-Project/otdm-linux-app/releases"
            target="_blank"
            rel="noopener"
            class="dl-page-btn"
            >
            <div class="i-tabler:brand-ubuntu size-12 self-center"></div>
            <p>linux版<br/>CUIアプリ<span class="hidden sm:inline">ケーション</span>を<br/>ダウンロード</p>
          </a>
        </div>
      </div>
      <div class="flex-1 mt-8">
        <p class="text-center [word-break:keep-all] [overflow-wrap:anywhere]">
          注意: windows版のアプリケーションは
          <a
          href="https://www.wireguard.com/install"
          target="_blank"
          rel="noopener"
          class="text-docs-link hover:underline"
          >
            wireguard
          </a>
          のインストールが必要です。
        </p>
      </div>
    </div>
</Layout>