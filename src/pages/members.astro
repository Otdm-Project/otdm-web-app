---
import Layout from '@/layouts/layout.astro';
import { members } from '@/data/members';
import { Image } from 'astro:assets';

---

<Layout title="メンバー | おてだま">
  <div class="w-full mp-otdm">
    <h1 class="text-4xl">Members</h1>
    <div class="grid justify-center gap-4 [grid-template-columns:repeat(auto-fit,16rem)] mt-12 ">
      {members.map( members => (
        <div class="w-64 h-96 bg-docs-primary border-(2 otdm-secondary) rounded-lg overflow-hidden">
          <div class="relative mb-12">
            <Image
              src={members.headerImage}
              alt={`${members.name} header`}
              class="w-full h-40 object-cover"
            />
            <a href={members.github} class="absolute -bottom-12 p-2">
              <Image 
                src={members.avatar}
                alt={members.name}
                width={80}
                height={80}
                class="rounded-full border-(4 docs-primary )"
                />
            </a>
          </div>
          <div class="flex flex-col gap-2 mx-4 ">
            <a href={members.github}>{members.name}</a>
            <p>{members.role}</p>
            <p>{members.bio}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>